<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/segment_player_control_recycler_view_item_width"
    android:layout_height="@dimen/segment_player_control_recycler_view_item_height"
    android:background="@color/black">

    <ImageView
        android:id="@+id/item_segment_thumbnail"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_alignParentTop="true" />

    <TextView
        android:id="@+id/item_segment_duration"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/item_segment_thumbnail"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="8dp"
        android:background="@color/black"
        android:padding="8dp"
        android:text="--:--"
        android:textColor="@color/white" />

	<ProgressBar
		android:id="@+id/item_segment_progress"
	    android:layout_width="match_parent"
	    android:layout_height="3dp"
	    android:layout_marginTop="1dp"
	    android:progressDrawable="@drawable/seekbar_background"
	    android:layout_below="@+id/item_segment_thumbnail"
	    style="?android:attr/progressBarStyleHorizontal"/>

    <TextView
        android:id="@+id/item_segment_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:padding="8dp"
        android:layout_below="@id/item_segment_progress"
        android:gravity="center_vertical"
        android:lines="2"
        android:maxLines="2"
        android:minLines="2"
        android:text="line1\nline2"
        android:textColor="@color/white" />

	<View android:id="@+id/item_segment_darkener"
	      android:layout_width="match_parent"
	      android:layout_height="match_parent"
	      android:layout_alignBottom="@id/item_segment_thumbnail"
	      android:layout_alignRight="@id/item_segment_thumbnail"
	      android:background="#80000000"/>

</RelativeLayout>